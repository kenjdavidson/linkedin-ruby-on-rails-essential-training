<h2>Login</h2>
<div class="container">
    <p>Simulate a login form</p>
</div>
<%= form_tag(access_new_path) do %>
<div class="container">
    <table summary="Login form">
        <tr>
            <th><%= label_tag(:username) %></th>
            <td><%= text_field_tag(:username, params[:username]) %></td>
        </tr>
        <tr>
            <th><%= label_tag(:password) %></th>
            <td><%= password_field_tag(:password, params[:password]) %></td>
        </tr>
    </table>
</div>
<div class="container form-buttons">
    <%= submit_tag("Login") %>
</div>
<% end %>